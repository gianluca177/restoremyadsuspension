---
/**
 * src/pages/index.astro
 * Hero + simple nav (matching screenshot)
 * Replace placeholder image paths with your real files in /public
 */
const site = {
  brand: "ADRESTORE",
  tagline: "MARKETING",
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AdRestore — Google Ads Suspension Recovery</title>
    <meta
      name="description"
      content="We help reinstate suspended Google Ads accounts and support you post-restoration."
    />

    <style>
      :root{
        --bg1:#051a33;
        --bg2:#06162b;
        --panel:#071c34;
        --text:#eaf2ff;
        --muted:#b8c7e6;
        --accent:#4fb4ff;
        --mint:#48e0c6;
        --btn:#6bbcff;
        --btnText:#07233a;
        --ring:rgba(96,195,255,.35);
        --shadow: 0 24px 60px rgba(0,0,0,.35);
      }
      *{box-sizing:border-box}
      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
        color:var(--text);
        background:
          radial-gradient(1200px 600px at 55% 40%, rgba(80,190,255,.10), transparent 60%),
          linear-gradient(180deg, var(--bg1), var(--bg2));
      }
      a{color:inherit;text-decoration:none}
      .wrap{max-width:1200px;margin:0 auto;padding:0 28px}
      header{
        position:sticky;top:0;
        backdrop-filter:saturate(120%) blur(8px);
        background:rgba(5,26,51,.55);
        border-bottom:1px solid rgba(255,255,255,.06);
        z-index:50;
      }
      .nav{
        height:76px; display:flex; align-items:center; justify-content:space-between;
      }
      .brand{
        display:flex; align-items:center; gap:12px;
      }
      .brand img{
        width:44px;height:44px; object-fit:contain;
        filter: drop-shadow(0 10px 18px rgba(0,0,0,.35));
      }
      .brand .text{
        display:flex; flex-direction:column; line-height:1.05;
      }
      .brand .text strong{letter-spacing:.4px}
      .brand .text span{font-size:11px; letter-spacing:2.2px; opacity:.8}
      .navlinks{display:flex;align-items:center;gap:22px}
      .navlinks a{
        font-size:14px; color:rgba(234,242,255,.88);
        opacity:.92;
      }
      .navlinks a:hover{color:#fff; opacity:1}
      .btn{
        display:inline-flex; align-items:center; justify-content:center;
        padding:12px 22px; border-radius:999px;
        background: linear-gradient(180deg, #7fd1ff, #55aef7);
        color:#06213a;
        font-weight:700;
        box-shadow: 0 14px 30px rgba(100,190,255,.18);
        border:1px solid rgba(255,255,255,.18);
      }
      .btn:hover{transform: translateY(-1px)}
      .hero{
        padding:64px 0 72px;
      }
      .heroGrid{
        display:grid; grid-template-columns: 1.05fr .95fr;
        gap:46px;
        align-items:center;
      }
      h1{
        margin:0 0 14px;
        font-size:54px;
        line-height:1.06;
        letter-spacing:-.7px;
      }
      .blue{color:var(--accent)}
      .mint{color:var(--mint)}
      .bullets{
        margin:18px 0 18px;
        padding:0;
        list-style:none;
        display:grid;
        gap:10px;
        color:rgba(234,242,255,.92);
        font-size:15.5px;
      }
      .bullets li{
        display:flex; gap:10px; align-items:flex-start;
      }
      .check{
        width:18px;height:18px; flex:0 0 18px;
        margin-top:2px;
        border-radius:999px;
        display:inline-grid; place-items:center;
        background:rgba(79,180,255,.15);
        border:1px solid rgba(79,180,255,.25);
      }
      .check svg{width:12px;height:12px; fill:var(--accent)}
      .trustRow{
        margin:18px 0 14px;
        display:flex; align-items:center; gap:12px;
        opacity:.92;
      }
      .stars{
        display:flex; gap:2px; align-items:center;
      }
      .stars svg{width:16px;height:16px; fill:#ffd45a}
      .trustMeta{
        font-size:12px; color:rgba(184,199,230,.92);
      }
      .trustText{
        margin:10px 0 22px;
        font-size:14px;
        color:rgba(234,242,255,.84);
        max-width:520px;
      }
      .ctaRow{
        display:flex; align-items:center; gap:14px; flex-wrap:wrap;
      }
      .ctaPrimary{
        padding:14px 22px;
        border-radius:999px;
        background: linear-gradient(180deg, #7fd1ff, #55aef7);
        color:#06213a;
        font-weight:800;
        border:1px solid rgba(255,255,255,.2);
        box-shadow: 0 18px 38px rgba(100,190,255,.20);
        display:inline-flex; align-items:center; gap:10px;
      }
      .ctaPrimary svg{width:18px;height:18px; fill:#06213a}
      .guarantee{
        margin-top:14px;
        display:flex; align-items:center; gap:10px;
        color:rgba(234,242,255,.78);
        font-size:13.5px;
      }
      .guarantee .icon{
        width:18px;height:18px;border-radius:999px;
        border:1px solid rgba(255,255,255,.18);
        display:grid;place-items:center;
      }
      .guarantee .icon svg{width:12px;height:12px; fill:rgba(234,242,255,.85)}
      /* Right visual */
      .visual{
        position:relative;
        min-height:420px;
        display:grid;
        place-items:center;
      }
      .glow{
        position:absolute;
        width:420px;height:420px;
        border-radius:999px;
        background:
          radial-gradient(circle at 50% 50%, rgba(72,224,198,.55), rgba(72,224,198,.18) 35%, transparent 70%),
          radial-gradient(circle at 50% 50%, rgba(79,180,255,.25), transparent 62%);
        filter: blur(0px);
        opacity:.95;
      }
      .phone{
        position:relative;
        width:min(380px, 92%);
        filter: drop-shadow(0 26px 70px rgba(0,0,0,.45));
      }
      .phone img{
        width:100%;
        height:auto;
        display:block;
      }
      /* Responsive */
      @media (max-width: 980px){
        h1{font-size:44px}
        .heroGrid{grid-template-columns:1fr; gap:34px}
        .visual{min-height:360px}
        .glow{width:360px;height:360px}
      }
      @media (max-width: 520px){
        .wrap{padding:0 18px}
        h1{font-size:36px}
        header{position:relative}
        .navlinks{display:none}
      }
    </style>
  </head>

  <body>
    <!-- NAV -->
    <header>
      <div class="wrap">
        <div class="nav">
          <a class="brand" href="/" aria-label="AdRestore Home">
            <!-- Replace with your logo in /public -->
            <img src="/logo-mark.png" alt="AdRestore logo" />
            <div class="text">
              <strong>{site.brand}</strong>
              <span>{site.tagline}</span>
            </div>
          </a>

          <nav class="navlinks" aria-label="Primary">
            <a href="/contact">Contact us</a>
          </nav>

          <a class="btn" href="/contact">Contact Us</a>
        </div>
      </div>
    </header>

    <!-- HERO -->
    <main class="hero">
      <div class="wrap">
        <section class="heroGrid">
          <!-- LEFT -->
          <div>
            <h1>
              We&rsquo;re a <span class="blue">Google Ads Agency</span><br />
              That Fixes &amp; <span class="mint">Scales</span><br />
              <span class="mint">Suspended Accounts</span> &hellip;
            </h1>

            <ul class="bullets">
              <li>
                <span class="check" aria-hidden="true">
                  <svg viewBox="0 0 24 24"><path d="M9.0 16.2 4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4z"/></svg>
                </span>
                <span>Reinstated in Under 7 Days</span>
              </li>
              <li>
                <span class="check" aria-hidden="true">
                  <svg viewBox="0 0 24 24"><path d="M9.0 16.2 4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4z"/></svg>
                </span>
                <span>Post-Restoration Support Included</span>
              </li>
              <li>
                <span class="check" aria-hidden="true">
                  <svg viewBox="0 0 24 24"><path d="M9.0 16.2 4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4z"/></svg>
                </span>
                <span>Agency Access &mdash; No Login Required</span>
              </li>
            </ul>

            <!-- Trust / rating row -->
            <div class="trustRow">
              <div class="stars" aria-label="5 star rating">
                <svg viewBox="0 0 24 24"><path d="M12 17.3 18.2 21l-1.6-7 5.4-4.7-7.1-.6L12 2 9.1 8.7 2 9.3l5.4 4.7-1.6 7z"/></svg>
                <svg viewBox="0 0 24 24"><path d="M12 17.3 18.2 21l-1.6-7 5.4-4.7-7.1-.6L12 2 9.1 8.7 2 9.3l5.4 4.7-1.6 7z"/></svg>
                <svg viewBox="0 0 24 24"><path d="M12 17.3 18.2 21l-1.6-7 5.4-4.7-7.1-.6L12 2 9.1 8.7 2 9.3l5.4 4.7-1.6 7z"/></svg>
                <svg viewBox="0 0 24 24"><path d="M12 17.3 18.2 21l-1.6-7 5.4-4.7-7.1-.6L12 2 9.1 8.7 2 9.3l5.4 4.7-1.6 7z"/></svg>
                <svg viewBox="0 0 24 24"><path d="M12 17.3 18.2 21l-1.6-7 5.4-4.7-7.1-.6L12 2 9.1 8.7 2 9.3l5.4 4.7-1.6 7z"/></svg>
              </div>

              <div class="trustMeta">
                <!-- Placeholder for “Based on X reviews / Trustpilot / Google” -->
                Based on 5+ responses
              </div>
            </div>

            <p class="trustText">
              Trusted by advertisers, affiliates, and agencies worldwide. Full reinstatement support or your money back.
            </p>

            <div class="ctaRow">
              <a class="ctaPrimary" href="/start">
                <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M8 5v14l11-7z"/></svg>
                Fix Your Google Suspension
              </a>
            </div>

            <div class="guarantee">
              <span class="icon" aria-hidden="true">
                <svg viewBox="0 0 24 24"><path d="M12 2a10 10 0 1 0 .001 20.001A10 10 0 0 0 12 2Zm1 14h-2v-2h2v2Zm0-4h-2V6h2v6Z"/></svg>
              </span>
              <span>No Fix? No Charge. 100% Refund Guarantee.</span>
            </div>
          </div>

          <!-- RIGHT -->
          <div class="visual" aria-hidden="true">
            <div class="glow"></div>

            <div class="phone">
              <!-- Replace with your hero phone image in /public -->
              <img src="/hero-phone.png" alt="Google Ads account reactivated message" />
            </div>
          </div>
        </section>
      </div>
    </main>
  </body>
</html>