---
const site = {
  brand: "ADRESTORE",
  tagline: "MARKETING",
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AdRestore — Google Ads Suspension Recovery</title>

    <style>
      :root{
        --bg1:#051a33;
        --bg2:#06162b;
        --panel:#071c34;
        --text:#eaf2ff;
        --muted:#b8c7e6;
        --accent:#4fb4ff;
        --mint:#48e0c6;
        --btn:#6bbcff;
        --btnText:#07233a;
        --ring:rgba(96,195,255,.35);
        --shadow: 0 24px 60px rgba(0,0,0,.35);
      }

      *{box-sizing:border-box}

      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system;
        color:var(--text);
        background:
          radial-gradient(1200px 600px at 55% 40%, rgba(80,190,255,.10), transparent 60%),
          linear-gradient(180deg, var(--bg1), var(--bg2));
      }

      a{text-decoration:none;color:inherit}

      .wrap{max-width:1200px;margin:0 auto;padding:0 28px}

      header{
        position:sticky;
        top:0;
        backdrop-filter:saturate(120%) blur(8px);
        background:rgba(5,26,51,.55);
        border-bottom:1px solid rgba(255,255,255,.06);
        z-index:50;
      }

      .nav{
        height:76px;
        display:flex;
        align-items:center;
        justify-content:space-between;
      }

      .brand{
        display:flex;
        align-items:center;
        gap:12px;
      }

      .brand img{
        width:44px;
        height:44px;
        object-fit:contain;
        filter: drop-shadow(0 10px 18px rgba(0,0,0,.35));
      }

      .brand .text{
        display:flex;
        flex-direction:column;
        line-height:1.05;
      }

      .brand .text strong{letter-spacing:.4px}
      .brand .text span{font-size:11px;letter-spacing:2.2px;opacity:.8}

      .navlinks{
        display:flex;
        align-items:center;
        gap:22px;
      }

      .navlinks a{
        font-size:14px;
        color:rgba(234,242,255,.88);
        opacity:.92;
      }

      .navlinks a:hover{color:#fff;opacity:1}

      .btn{
        padding:12px 22px;
        border-radius:999px;
        background: linear-gradient(180deg, #7fd1ff, #55aef7);
        color:#06213a;
        font-weight:700;
        box-shadow: 0 14px 30px rgba(100,190,255,.18);
        border:1px solid rgba(255,255,255,.18);
      }

      .hero{
        padding:64px 0 72px;
      }

      .heroGrid{
        display:grid;
        grid-template-columns:1.05fr .95fr;
        gap:46px;
        align-items:center;
      }

      h1{
        margin:0 0 14px;
        font-size:54px;
        line-height:1.06;
        letter-spacing:-.7px;
      }

      .blue{color:var(--accent)}
      .mint{color:var(--mint)}

      .bullets{
        margin:18px 0;
        padding:0;
        list-style:none;
        display:grid;
        gap:10px;
      }

      .bullets li{
        display:flex;
        gap:10px;
      }

      .ctaPrimary{
        padding:14px 22px;
        border-radius:999px;
        background: linear-gradient(180deg, #7fd1ff, #55aef7);
        color:#06213a;
        font-weight:800;
        display:inline-block;
        margin-top:15px;
      }

      @media (max-width:980px){
        .heroGrid{grid-template-columns:1fr}
        h1{font-size:42px}
      }
    </style>
  </head>

  <body>

    <header>
      <div class="wrap">
        <div class="nav">
          <a class="brand" href="/">
            <img src="/logo-mark.png" alt="AdRestore logo" />
            <div class="text">
              <strong>{site.brand}</strong>
              <span>{site.tagline}</span>
            </div>
          </a>

          <nav class="navlinks">
            <a href="/contact">Contact</a>
          </nav>

          <a class="btn" href="/contact">Contact Us</a>
        </div>
      </div>
    </header>

    <main class="hero">
      <div class="wrap">
        <section class="heroGrid">
          <div>
            <h1>
              We’re a <span class="blue">Google Ads Agency</span><br />
              That Fixes & <span class="mint">Scales</span><br />
              Suspended Accounts
            </h1>

            <ul class="bullets">
              <li>✔ Reinstated in Under 7 Days</li>
              <li>✔ Post-Restoration Support Included</li>
              <li>✔ Agency Access — No Login Required</li>
            </ul>

            <a class="ctaPrimary" href="#">
              Fix Your Google Suspension
            </a>
          </div>

          <div>
            <img src="/hero-phone.png" alt="Google Ads Reactivated" style="max-width:380px;width:100%;" />
          </div>

        </section>
      </div>
    </main>

  </body>
</html>